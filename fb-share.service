[Unit]
Description=Facebook Share Test FastAPI Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/fb-share-test
Environment="PATH=/opt/fb-share-test/venv/bin"
ExecStart=/opt/fb-share-test/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --workers 4
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
